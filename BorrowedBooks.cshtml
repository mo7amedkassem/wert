@model IEnumerable<Library_Management.Models.Borrowing>

@{
    ViewData["Title"] = "My Borrowed Books";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">My Borrowed Books</h1>
    <a class="btn btn-primary" asp-action="BuyerBooks">
        <span class="me-1">Browse All Books</span>
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Book Title</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Borrowed Date</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Book?.Title</td>
                            <td>@item.Book?.Author</td>
                            <td class="text-monospace">@item.Book?.ISBN</td>
                            <td>@item.BorrowedAt.ToString("yyyy-MM-dd")</td>
                            <td class="text-end">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.BookId">Details</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No borrowed books.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
