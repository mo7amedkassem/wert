@{
    ViewData["Title"] = "Logout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h1 class="h4 mb-3">Confirm Logout</h1>
                <p class="text-muted">Are you sure you want to log out?</p>
                <form asp-action="ConfirmLogout" method="post">
                    <button type="submit" class="btn btn-danger me-2">Logout</button>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


