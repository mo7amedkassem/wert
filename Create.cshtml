@model Library_Management.Models.Borrowing

@{
    ViewData["Title"] = "Create Borrowing";
}

<h1 class="h3 mb-3">Create Borrowing</h1>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="BookId" class="form-label"></label>
                        <input asp-for="BookId" class="form-control" type="number" placeholder="Enter Book ID" />
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MemberId" class="form-label"></label>
                        <input asp-for="MemberId" class="form-control" type="number" placeholder="Enter Member ID" />
                        <span asp-validation-for="MemberId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BorrowedAt" class="form-label"></label>
                        <input asp-for="BorrowedAt" class="form-control" type="date" />
                        <span asp-validation-for="BorrowedAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReturnDate" class="form-label"></label>
                        <input asp-for="ReturnDate" class="form-control" type="date" />
                        <span asp-validation-for="ReturnDate" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
